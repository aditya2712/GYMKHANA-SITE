<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" href="/./image/icons/GSUB12.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/adminForm.css" />
    <title>Admin Form</title>
  </head>
  <body>
    <div class="banner">
      <div class="banner-inner container">
        <img class="logo" src="/image/icons/GSUB12.png" />
        <h1 class="heading">Admin Form</h1>
      </div>
    </div>
    <div class="lower-pannel">
      <form action="/adminform" method="POST">
        <label for="category">Category -</label><br />
        <select name="category">
          <option value="Administration" selected>Administration</option>
          <option value="Gymkhana">Gymkhana</option>
          <option value="Clubs">Clubs</option></select
        ><br />
        <label for="heading">Heading -</label><br />
        <input type="text" name="heading" placeholder="Heading..." /><br />
        <label for="postedBy">Posted By -</label><br />
        <input type="text" name="postedBy" placeholder="Posted By..." /><br />
        <label for="deadline">Deadline -</label><br />
        <input type="date" name="deadline" />
        <input type="time" name="deadline" /><br />
        <label for="details">Details</label><br />
        <input id="detailinput" class="detailinput" type="text" name="details">
        <textarea id="textarea" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <label for="links">Links & Google Doc</label><br />
        <input type="url" name="links" placeholder="Links..." /><br />
        <button onclick="inputDetail()">Submit</button>
      </form>
    </div>
    <script>
      const inputDetail= () => {
        const textarea=document.getElementById("textarea");
        const detailsinput=document.getElementById("detailinput");
        detailsinput.value=textarea.value;
      }
    </script>
  </body>
</html>
